<li class = 'comment'>
  <div>
    <%= comment.user ? comment.user.name : "Unknown" %>
    <small> <%= format_creation_time comment %> </small>

  </div>
  <td> <%= link_to('<i class = "glyphicon glyphicon-arrow-up"></i>'.html_safe, comment_votes_path(comment), method: :post)%> <%= comment.votes.length%></td>
  <div>
    <%= comment.body %>
    <%= link_to "reply", new_comment_comment_path(comment) %>
  </div>
  <% unless comment.comments.empty? %>
  <ul class = 'comment_list'>
    <%= render :partial => 'comment', :collection => comment.comments %>
  </ul>
  <% end %>
</li>