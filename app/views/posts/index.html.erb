<h3>Latest posts</h3>
<table class="table">
<tr>
    <th>Score</th>
    <th>Title</th>
    <th>User</th>
    <th>Posted</th>
    <th>Comments</th>

</tr>

<% if @posts.any? %>
    <% @posts.each do |post| %>
        <tr>
            <td>
            <%= post.votes.length%> <%= button_to "â†‘", post_vote_path(post), :class=>"btn btn-xs"%></td>
            <td><%= link_to post.title,post.link, :target=>'_blank' %></td>
            <td><%= post.user ? post.user.name : 'Unknown' %></td>
            <td><%= format_creation_time post %> </td>

            <td><%= link_to "Comment", post_comments_path(post), :class=>"btn btn-primary btn-xs"%></td>

        </tr>
    <% end %>
<% else %>
    <tr>
        <td>No posts</td>
    </tr>
<% end %>